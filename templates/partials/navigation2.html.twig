<button class="menu__button menu__button--hidden-md">MENU</button>
<ul class="menu__list menu__list--visible-md">
    {% for page in pages.children.visible %}
        {% set current_page = (page.active or page.activeChild) ? 'menu__item--active' : '' %}
        <li class="menu__item {{ current_page }}">
            <a href="{{ page.url }}">
                {{ page.menu }}
            </a>
        </li>
    {% endfor %}
</ul>
