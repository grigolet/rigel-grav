<button class="menu__button">MENU</button>
<ul class="menu__list">
    {% for page in pages.children.visible %}
        {% set current_page = (page.active or page.activeChild) ? '--active' : '' %}
        <li class="menu__item{{ current_page }}">
            <a href="{{ page.url }}">
                {{ page.menu }}
            </a>
        </li>
    {% endfor %}
</ul>
